<body id="container">
   <div class="input-box">
       <label for="a">Enter number A:</label>
       <input type="number" id="a" min="0" max="100">
   </div>
   <div class="input-box">
       <label for="b">Enter number B:</label>
       <input type="number" id="b" min="0" max="100">
   </div>
   <div class="result-box">
       <p id="result"></p>
   </div>
   <script src="https://cdn.jsdelivr.net/npm/@flaskui/flask_ui@2.0.0/dist/flask_ui.min.js"></script>
   <script>
       const app = new FlaskUI();
       app.run()
       function calculate() {
           let a = document.getElementById("a").value;
           let b = document.getElementById("b").value;
           fetch('http://localhost:5000/calculate', {
               method: 'POST',
               headers: {'Content-Type': 'application/json'},
               body: JSON.stringify({ a, b })
           });
       }
       document.addEventListener("keydown", (e) => {
           if (e.code === "Enter") {
               calculate();
           }
       });
   </script>
</body>
